
<div class="container">
<h1><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.ingredient.name %>
    <%= dose.description %>
    <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %>
  </li>
  <% end %>
</ul>

<%= link_to "Add an ingredient",  new_cocktail_dose_path(@cocktail), class: "btn btn-medium" %>
</div>
