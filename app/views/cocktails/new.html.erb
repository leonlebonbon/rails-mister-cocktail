
<div class="my-banner text-center">
  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path "home.jpeg" %>');">
    <div class="banner-content">
      <h1>Add your favorite cocktail below</h1>
    </div>
  </div>
</div>


<div class="container new">
  <%= simple_form_for @cocktail do |f| %>
    <%= f.input :name, label: "Insert the name of your favorite cocktail" %>
    <%= f.submit "Add my delicious cocktail", class: "btn btn-banner" %>
  <% end %>
</div>


